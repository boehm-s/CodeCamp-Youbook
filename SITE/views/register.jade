extends layout

block head
  link(rel='stylesheet', href='/css/register.css')
  
block body
  .col-xs-6.col-xs-offset-3
    h1= title
    form(name='form', role='form')      
      .form-group
        label(for='firstName') First Name
        input#firstName.form-control(type='text', name='firstName', required)
      .form-group
        label(for='lastName') last Name
        input#lastName.form-control(type='text', name='lastName', required)
      .form-group
          label(for='username') Username
          input#username.form-control(type='text', name='username', required)
      .form-group
        label(for='email') Email
        input#email.form-control(type='email', name='email', required)
      .form-group
        label(for='email-confirmation') Email confirmation
        input#email-confirmation.form-control(type='email', name='emailConfirmation', required)
      .form-group
        label(for='password') Password
        input#password.form-control(type='password', name='password', required)
      .form-group
        label(for='password-confirmation') Password confirmation
        input#password-confirmation.form-control(type='password', name='passwordConfirmation', required)
      .form-group
        label(for='seller-ID') Seller ID
        input#seller-id.form-control(type='text', name='sellerID', required)
      .form-actions
        button#register-button.btn.btn-primary(type='submit') Register
        //
          img(src="data:image/gif;base64,")
        a.btn.btn-link(href='/connection') Cancel

block scripts
  script(src="/js/register.js")